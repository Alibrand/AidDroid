<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="30dp"
    android:background="@drawable/sign_back"
    tools:context=".CenterFormActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"
            android:shadowDy="8"
            android:shadowRadius="3"
            android:shadowColor="#4A000000"
            android:shadowDx="0"
            android:text="Medical Center Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="left"
                android:text="Center Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txt_full_name"
                android:padding="10dp"
                android:background="@drawable/edit_text_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="left"
                android:text="Work Hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:text="From"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:layout_weight="1"
                        android:id="@+id/sp_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="1"
                        android:text="To"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:layout_weight="1"
                        android:id="@+id/sp_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_gravity="left"
                android:text="Phone Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txt_phone"
                android:inputType="phone"
                android:padding="10dp"
                android:background="@drawable/edit_text_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="left"
                android:text="Center Services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txt_services"
                android:background="@drawable/edit_text_back"
                android:lines="4"
                android:hint="First Aid Emergency,Heart diseases Emergency..."
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

<androidx.appcompat.widget.AppCompatButton
    android:layout_marginTop="15dp"
    android:id="@+id/btn_set_location"
    android:textAllCaps="false"
    android:text="Set Location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"/>




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign_up"
                android:layout_marginTop="15dp"
                android:text="Sign Up"
                android:shadowDy="5"
                android:shadowDx="1"
                android:layout_gravity="center"
                android:shadowColor="#90000000"
                android:shadowRadius="4"
                android:paddingHorizontal="25dp"
                android:paddingVertical="15dp"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@drawable/button_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>







</androidx.appcompat.widget.LinearLayoutCompat>