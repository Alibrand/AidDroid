<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="30dp"
    android:background="@drawable/sign_back"
    tools:context=".ForgotPasswordActivity">
    <ImageView
        android:id="@+id/btn_back"
        android:layout_gravity="left"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="118dp"
        android:layout_height="132dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo" />

    <TextView
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="left"
        android:textSize="18sp"
        android:gravity="center"
        android:shadowDy="8"
        android:shadowRadius="3"
        android:shadowColor="#4A000000"
        android:shadowDx="0"
        android:text="Enter your email address then press Send \n
The system will send a password reset link to your inbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_gravity="left"
        android:text="Email Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txt_email"
        android:padding="10dp"
        android:background="@drawable/edit_text_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send"
        android:layout_marginTop="15dp"
        android:text="Send"
        android:shadowDy="5"
        android:shadowDx="1"
        android:shadowColor="#90000000"
        android:shadowRadius="4"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="@drawable/button_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</androidx.appcompat.widget.LinearLayoutCompat>