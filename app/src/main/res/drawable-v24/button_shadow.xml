<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:right="5dp" android:top="5dp">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="#8A918888" />
        </shape>
    </item>

    <item android:top="5dp"
        android:left="5dp"
        android:right="5dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_green"/>
            <corners android:radius="20dp"/>

        </shape>

    </item>

    <!--  left shadow -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#00FF0000"
                android:centerX="0.98"
                android:endColor="#5C000000"
                android:startColor="@color/main_green" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#00FF0000"
                android:centerX="0.98"
                android:endColor="#5C000000"
                android:startColor="@color/main_green" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#6B000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#6B000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>